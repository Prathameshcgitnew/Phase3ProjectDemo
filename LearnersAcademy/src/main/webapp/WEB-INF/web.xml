	</servlet>
	<servlet>
		<servlet-name>UpdateClasses</servlet-name>
		<display-name>UpdateClasses</display-name>
		<description></description>
		<servlet-class>com.servlets.UpdateClasses</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClassReport</servlet-name>
		<display-name>ClassReport</display-name>
		<description></description>
		<servlet-class>com.servlets.ClassReport</servlet-class>
