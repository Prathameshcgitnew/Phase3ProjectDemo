	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClassReport</servlet-name>
		<url-pattern>/reporting</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>Login.html</welcome-file>
		<welcome-file>Login.htm</welcome-file>
